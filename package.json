{
    "name": "crpl",
    "displayName": "CRPL Language Support",
    "description": "Syntax support for the scripting language from the game Creeper World 3",
    "version": "0.0.1",
    "publisher": "knucracker-community",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:crpl"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "crpl",
                "aliases": [
                    "CRPL",
                    "crpl"
                ],
                "extensions": [
                    ".crpl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "crpl",
                "scopeName": "source.crpl",
                "path": "./syntaxes/crpl.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
